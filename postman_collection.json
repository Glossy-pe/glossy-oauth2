          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "password",
                  "value": "secret",
                  "type": "string"
                },
                {
                  "key": "username",
                  "value": "public-client",
                  "type": "string"
                }
              ]
